# Quenty Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:5432/quenty_db
CARRIER_DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:5432/carrier_db

# Redis Configuration  
REDIS_URL=redis://:[PASSWORD]@[HOST]:6379/0
CARRIER_REDIS_URL=redis://:[PASSWORD]@[HOST]:6379/1

# RabbitMQ Configuration
RABBITMQ_URL=amqp://[USER]:[PASSWORD]@[HOST]:5672//
CELERY_BROKER_URL=amqp://[USER]:[PASSWORD]@[HOST]:5672//
CELERY_RESULT_BACKEND=redis://:[PASSWORD]@[HOST]:6379/1

# Security Keys (MUST BE CHANGED!)
SECRET_KEY=[GENERATE-STRONG-SECRET-KEY]
CARRIER_SECRET_KEY=[GENERATE-STRONG-CARRIER-SECRET]
CARRIER_ENCRYPTION_KEY=[GENERATE-32-BYTE-ENCRYPTION-KEY]
ADMIN_API_KEY=[GENERATE-STRONG-ADMIN-API-KEY]

# Carrier API Credentials - DHL (Production)
DHL_API_KEY=[YOUR-DHL-API-KEY]
DHL_API_SECRET=[YOUR-DHL-API-SECRET]
DHL_ACCOUNT_NUMBER=[YOUR-DHL-ACCOUNT-NUMBER]
DHL_ENDPOINT=https://express.api.dhl.com/mydhlapi

# Carrier API Credentials - FedEx (Production)
FEDEX_CLIENT_ID=[YOUR-FEDEX-CLIENT-ID]
FEDEX_CLIENT_SECRET=[YOUR-FEDEX-CLIENT-SECRET]
FEDEX_ACCOUNT_NUMBER=[YOUR-FEDEX-ACCOUNT-NUMBER]
FEDEX_ENDPOINT=https://apis.fedex.com

# Carrier API Credentials - UPS (Production)
UPS_CLIENT_ID=[YOUR-UPS-CLIENT-ID]
UPS_CLIENT_SECRET=[YOUR-UPS-CLIENT-SECRET]
UPS_ACCOUNT_NUMBER=[YOUR-UPS-ACCOUNT-NUMBER]
UPS_ENDPOINT=https://onlinetools.ups.com/api

# Carrier API Credentials - Servientrega (Production)
SERVIENTREGA_USER=[YOUR-SERVIENTREGA-USER]
SERVIENTREGA_PASSWORD=[YOUR-SERVIENTREGA-PASSWORD]
SERVIENTREGA_BILLING_CODE=[YOUR-BILLING-CODE]
SERVIENTREGA_ENDPOINT=http://web.servientrega.com:8081/GeneracionGuias.asmx?wsdl

# Carrier API Credentials - Interrapidisimo (Production)
INTERRAPIDISIMO_API_KEY=[YOUR-INTERRAPIDISIMO-API-KEY]
INTERRAPIDISIMO_CLIENT_CODE=[YOUR-CLIENT-CODE]
INTERRAPIDISIMO_ENDPOINT=https://api3.interrapidisimo.com/ApiServiceRestful/api/v2

# Banco de la Rep√∫blica - TRM Service
BANCO_REPUBLICA_ENDPOINT=https://www.superfinanciera.gov.co/SuperfinancieraWebServiceTRM/TCRMServicesWebService/TCRMServicesWebService

# Service Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
WEBHOOK_SECRET=[GENERATE-WEBHOOK-SECRET]

# Monitoring and Observability
PROMETHEUS_ENABLED=true
OTEL_ENABLED=true
OTEL_ENDPOINT=[YOUR-OTEL-COLLECTOR-ENDPOINT]

# Email Configuration (Production)
SMTP_HOST=[YOUR-SMTP-HOST]
SMTP_PORT=587
SMTP_USER=[YOUR-SMTP-USER]
SMTP_PASSWORD=[YOUR-SMTP-PASSWORD]
NOTIFICATION_EMAIL=[YOUR-NOTIFICATION-EMAIL]

# SMS Configuration (Production)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=[YOUR-TWILIO-SID]
TWILIO_AUTH_TOKEN=[YOUR-TWILIO-TOKEN]
TWILIO_FROM_NUMBER=[YOUR-TWILIO-NUMBER]

# Slack Configuration (Production)
SLACK_WEBHOOK_URL=[YOUR-SLACK-WEBHOOK-URL]
SLACK_CHANNEL=[YOUR-SLACK-CHANNEL]

# TLS/SSL Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=[YOUR-S3-BUCKET]
AWS_ACCESS_KEY_ID=[YOUR-AWS-ACCESS-KEY]
AWS_SECRET_ACCESS_KEY=[YOUR-AWS-SECRET-KEY]
AWS_REGION=[YOUR-AWS-REGION]