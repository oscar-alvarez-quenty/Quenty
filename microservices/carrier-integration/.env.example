# Database
DATABASE_URL=postgresql://user:password@localhost:5432/carrier_db

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672//

# Celery
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Carrier API Keys (encrypted in database)
DHL_API_KEY=your-dhl-api-key
DHL_API_SECRET=your-dhl-api-secret
DHL_ACCOUNT_NUMBER=your-dhl-account

FEDEX_CLIENT_ID=your-fedex-client-id
FEDEX_CLIENT_SECRET=your-fedex-client-secret
FEDEX_ACCOUNT_NUMBER=your-fedex-account

UPS_CLIENT_ID=your-ups-client-id
UPS_CLIENT_SECRET=your-ups-client-secret
UPS_ACCOUNT_NUMBER=your-ups-account

SERVIENTREGA_USER=your-servientrega-user
SERVIENTREGA_PASSWORD=your-servientrega-password
SERVIENTREGA_BILLING_CODE=your-billing-code

INTERRAPIDISIMO_API_KEY=your-interrapidisimo-key
INTERRAPIDISIMO_CLIENT_CODE=your-client-code

# Service Configuration
SERVICE_NAME=carrier-integration
SERVICE_PORT=8009
LOG_LEVEL=INFO

# Monitoring
PROMETHEUS_ENABLED=true
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Webhook Authentication
WEBHOOK_SECRET=your-webhook-secret-here